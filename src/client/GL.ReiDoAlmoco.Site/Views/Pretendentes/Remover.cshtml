@model GL.ReiDoAlmoco.Site.Models.Pretendente.RemoverModel
@{
    ViewData["Title"] = "Remover pretendente";
}
<form asp-action="remover" asp-controller="pretendentes" method="post">
    <div class="container">
        <div class="text-center">
            <h3>@Model.Nome</h3>
        </div>
        <br />
        <div class="row">
            <div class="col-4 mx-auto">
                <p style="font-size:12px; color:gray;">A remoção do pretendente implica na remoção dos votos recebidos. Deseja continuar?</p>
            </div>
        </div>
         <div class="row">
            <div class="col-4 mx-auto">
            <div class="form-group">
                <button type="submit" class="btn btn-success col-12"> Continuar</button>
            </div>
        </div>
    </div>
</form>